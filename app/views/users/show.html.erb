<h1>User Account for <%= @user.first_name %> <%= @user.last_name %></h1>
   user id: <%= @user.id %>
  <p>
    Name: <%= @user.first_name %> <%= @user.last_name %><br />
  </p>
  <p>
    Alias: <%= @user.alias %><br />
  </p>
  <p>
    Email: <%= @user.email %><br />
  </p>
  <%= link_to 'Edit Profile', edit_user_path %> |


<%= link_to 'Create Character', new_character_path %> | <%= link_to 'View All Characters', characters_path %>
  <table>
    <caption><h3>Your Character(s)</h3></caption>
    <thead>
      <tr>
        <th>Owner</th>
        <th>Name</th>
        <th>Hit Points</th>
        <th>Class</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.user.first_name %> <%= character.user.last_name %></td>
          <td><%= character.name %></td>
          <td><%= character.hit_points %></td>
          <td><%= character.class_type.name %>
          <td><%= link_to 'Show', character %></td>
          <td><%= link_to 'Edit', edit_character_path(character) %></td>
          <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

