<p id="notice"><%= notice %></p>

<h1>Characters</h1>
<p>test hover javascript</p>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Class</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.user.alias %></td>
        <td><%= character.name %></td>
        <td><%= character.class_type.name %></td>
        <% if character.user.id == current_user.id %>
          <td><%= link_to 'Show', character %></td>
          <td><%= link_to 'Edit', edit_character_path(character) %></td>
          <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td class="gray-text">Not</td>
          <td class="gray-text">Your</td>
          <td class="gray-text">Character</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

